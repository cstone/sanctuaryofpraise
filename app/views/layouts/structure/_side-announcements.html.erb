<% unless @side_announcements.empty? %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-bullhorn"></i> <%= link_to 'Announcements', announcements_path %></h3>
  </div>
  <div class="panel-body">
    <% @side_announcements.each do |announcement| %>
        <li class="list-group-item"><%= link_to announcement.title.truncate(100), announcement %></li>
        <li class="list-group-item"><%= link_to 'Read more', announcement, class: 'small text-right' %></li>
    <% end %>
  </div>
</div>
<% end %>