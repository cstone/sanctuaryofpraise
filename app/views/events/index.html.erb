<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li class="active">Upcoming Events</li>
</ol>
<h3>Upcoming Events</h3>
<br/>
<% @events.each do |event| %>
    <h4><%= link_to event.title, event %></h4>
    <p><strong><%= event.time %></strong></p>
    <p><%= event.venue %></p>
    <p><%= event.description.truncate(250) %></p>
    <p><%= link_to 'More Info', event, class: 'btn btn-sm btn-primary pull-right' %></p>
    <br/>
    <hr>
<% end %>
<%= paginate @events %>